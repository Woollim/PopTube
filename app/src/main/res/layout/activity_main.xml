<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_bug"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    tools:context="root.ydworld.Activity.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_marginTop="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/helpButton"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_help"
                android:background="@drawable/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <LinearLayout
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_logo"
                    android:layout_width="84dp"
                    android:layout_height="84dp" />

                <ImageView
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_text"
                    android:layout_width="160dp"
                    android:layout_height="36dp" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/icon_bug"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="52dp"
                android:layout_height="52dp" />

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/image"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버그가 있나요?"/>

            <Button
                android:layout_margin="2dp"
                android:id="@+id/button_bug"
                android:textSize="16dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/back_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고하기"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:paddingBottom="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_warning"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_warning"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
