<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGray"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="82dp"
                android:src="@drawable/all_logo_icon"
                android:layout_height="82dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/main_bug_icon"
                android:src="@drawable/main_bug_icon" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_bug_icon"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="버그 신고"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="문제가 있나요?"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="신고하기"
                android:textColor="@color/colorAccent"
                android:layout_height="38dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/main_report_icon"
                android:src="@drawable/main_report_icon" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_report_icon"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="건의 사항"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="의견을 들려주세요!"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="건의하기"
                android:textColor="@color/colorAccent"
                android:layout_height="38dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/main_down_info_icon"
                android:src="@drawable/main_bug_icon" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_down_info_icon"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="주의 사항"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
