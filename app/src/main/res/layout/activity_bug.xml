<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorGray"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/tool_bug"
        android:background="@color/colorPrimaryDark"
        android:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_bug_back"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/all_back_button_icon"
                android:scaleType="fitXY"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:text="버그 신고"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </Toolbar>

    <android.support.v7.widget.CardView
        android:layout_margin="16dp"
        android:layout_below="@id/tool_bug"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="18dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="버그가 발생했나요?"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="불편을 끼쳐드려 죄송합니다.  발생하신 버그를 말씀해주세요."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_bug_bug"
                android:hint="버그를 입력하세요"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/button_bug_send"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_height="64dp">

        <ImageView
            android:src="@drawable/bug_bottom_icon"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="버그 신고하기"/>

    </LinearLayout>


</RelativeLayout>